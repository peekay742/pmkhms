@using MSIS_HMS.Enums;
@model MSIS_HMS.Core.Entities.Warehouse

<div class="col-xs-12 ">

    <div class=" bg-w">
        <div class="col-lg-12 col-xs-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title pull-left">Basic Info</h2>
                    <div class="actions panel_actions pull-right">
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <form action="/Warehouses/@ViewData["Action"]" method="post">
                            @Html.AntiForgeryToken()
                            @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                            {
                                <input asp-for="Id" hidden />
                                <input asp-for="BranchId" hidden />
                            }
                            <div class="col-xs-12 ">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-1" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label class="form-label" for="field-7">Code</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-7" asp-for="Code">
                                        <span asp-validation-for="Code" class="text-danger"></span>
                                    </div>
                                </div>
                                
                                 <div class="form-group">
                                    <label class="form-label" for="field-8">Location</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-8" asp-for="Location">
                                        <span asp-validation-for="Location" class="text-danger"></span>
                                    </div>
                                 </div>
                            
                                @* <div class="form-group"> *@
                                @*     <label class="form-label" for="field-8">Branch</label> *@
                                @*     <span class="desc"></span> *@
                                @*     <div class="controls"> *@
                                @*         <select class="form-control" asp-for="BranchId" asp-items="ViewBag.Branches"  id="field-8"> *@
                                @*             <option value="">Please Select Parent Menu</option> *@
                                @*         </select> *@
                                @*         <span asp-validation-for="BranchId" class="text-danger"></span> *@
                                @*     </div> *@
                                @* </div> *@
                                
                            </div>
                            <div class="col-xs-12  padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary gradient-blue">Save</button>
                                    <button type="button" data-href="/warehouses/index" class="btn btn-click">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts
{
}