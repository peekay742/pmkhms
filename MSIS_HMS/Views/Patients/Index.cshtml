@using MSIS_HMS.Enums
@using X.PagedList
@using static MSIS_HMS.Infrastructure.Helpers.DateTimeExtensions;
@model IPagedList<MSIS_HMS.Core.Entities.Patient>
@{
    var controller = "Patients";
    ViewData["Title"] = "All Patients";
    var count = 1;
    var query = Context.Request.Query;
    var StartRegDate = query["StartRegDate"];
    var EndRegDate = query["EndRegDate"];
    var RegNo = query["RegNo"];
    var Name = query["Name"];
    var NRC = query["NRC"];
    var Guardian = query["Guardian"];
    var DateOfBirth = query["DateOfBirth"];
    var Phone = query["Phone"];
    var BloodType = query["BloodType"];
    var Code = query["Code"];
    ViewData["Query"] = query;
}

<div class="col-xs-12 ">
    <div class=" bg-w">
        <div class="col-lg-12">
            <div class="panel-group" id="accordion" role="tablist" aria -multiselectable="true">
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne1">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                <i class='fa fa-search'></i> Search
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne1">
                        <div class="panel-body">
                            <form method="get" action="/@controller/Index">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="StartRegDate">Start Reg Date</label>
                                            <div class="controls">
                                                <input type="date" class="form-control" name="StartRegDate" value="@StartRegDate" id="StartRegDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="EndRegDate">End Reg Date</label>
                                            <div class="controls">
                                                <input type="date" class="form-control" name="EndRegDate" value="@EndRegDate" id="EndRegDate">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="RegNo">Reg No</label>
                                            <div class="controls">
                                                <input type="text" class="form-control" name="RegNo" value="@RegNo" id="RegNo">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="Name">Name</label>
                                            <div class="controls">
                                                <input type="text" class="form-control" name="Name" value="@Name" id="Name">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="NRC">NRC</label>
                                            <div class="controls">
                                                <input type="text" class="form-control" name="NRC" value="@NRC" id="NRC">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="Guardian">Guardian</label>
                                            <div class="controls">
                                                <input type="text" class="form-control" name="Guardian" value="@Guardian" id="Guardian">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="DateOfBirth">DateOfBirth</label>
                                            <div class="controls">
                                                <input type="date" class="form-control" name="DateOfBirth" value="@DateOfBirth" id="DateOfBirth">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="Phone">Phone</label>
                                            <div class="controls">
                                                <input type="text" class="form-control" name="Phone" value="@Phone" id="Phone">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="BloodType">Blood Type</label>
                                            <div class="controls">
                                                <input type="text" class="form-control" name="BloodType" value="@BloodType" id="BloodType">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label" for="BloodType">Bar/QR Code</label>
                                            <div class="controls">
                                                <input type="text" class="form-control" name="Code" value="@Code" id="Code" autofocus>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="form-label">&nbsp;</label>
                                            <div class="controls">
                                                <button type="submit" class="btn btn-primary gradient-blue">Search</button>
                                                <button type="button" data-href="/@controller/index" class="btn btn-click">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <section class="box ">
                <header class="panel_header">
                    <h2 class="title pull-left"></h2>
                    <div class="actions panel_actions pull-right">
                        <button data-href="/@controller/create" class="btn btn-click btn-primary gradient-blue">Create</button>
                        <button data-href="/@controller/import" class="btn btn-click btn-primary gradient-blue">Excel Import</button>
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <table id="example" class="display table table-hover table-condensed" style="cursor:pointer;">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Image</th>
                                        <th>Date</th>
                                        <th>Reg No.</th>
                                        <th>Name</th>
                                        <th>Father</th>
                                        <th>Township</th>
                                        <th>Phone</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr onclick="gotoDetail(@item.Id)">
                                        <td>@((((int)ViewBag.Page - 1) * (int)ViewBag.PageSize) + count)</td>
                                        <td><img src="@Url.Action("Index", "Images", new { path = item.Image })" class="thumbnail" /></td>
                                        <td>@item.RegDate.ToDateString()</td>
                                        <td>@item.RegNo</td>
                                        <td>@item.Name</td>
                                        <td>@item.Guardian</td>
                                         <td>@item.TownshipName</td> 
                                        <td>@item.Phone</td>
                                        <td>
                                            @*<a asp-controller="@controller" asp-action="PatientDetail" asp-route-patientId="@item.Id" class="btn btn-xs btn-secondary">Detail</a>*@
                                            <a asp-controller="@controller" asp-action="PrintBarCodeandQRCode" asp-route-patientId="@item.Id" class="btn btn-xs btn-secondary">QRCode</a>
                                            <a asp-controller="MedicalRecords" asp-action="Index" asp-route-patientId="@item.Id" class="btn btn-xs btn-secondary">Medical Records</a>
                                            <a asp-controller="Visits" asp-action="Create" asp-route-patientId="@item.Id" class="btn btn-xs btn-secondary">Revisit</a>
                                            <a asp-controller="IPDRecords" asp-action="Create" asp-route-patientId="@item.Id" class="btn btn-xs btn-secondary">Admission</a>
                                            <a asp-controller="@controller" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-xs btn-secondary">Edit</a>
                                            <button asp-controller="@controller" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-xs btn-secondary"
                                                    onclick="DeleteConfirm('/@controller/Delete/',@item.Id)">
                                                Delete
                                            </button>
                                            @*<a asp-controller="@controller" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-xs btn-secondary" onclick="DeleteConfirm('/@controller/Delete/',@item.Id)">Delete</a>*@
                                        </td>
                                    </tr>
                                        count++;
                                    }
                                </tbody>
                            </table>
                            <partial name="_Pagination" model="Model" view-data="ViewData" />
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        function gotoDetail(Id) {
            window.location = "/patients/PatientDetail?patientId=" + Id;
        }
    </script>

    @if (TempData["notice"] != null)
    {
        switch ((int)TempData["notice"])
        {
            case (int)StatusEnum.NoticeStatus.Success:
                <script>SaveAlert('center', 'success', 'Patient');</script>
                break;
            case (int)StatusEnum.NoticeStatus.Edit:
                <script>EditAlert('center', 'success', 'Patient');</script>
                break;
            case (int)StatusEnum.NoticeStatus.Delete:
                <script>DeleteAlert('center', 'success', 'Patient');</script>
                break;
        }

    }
}