@using MSIS_HMS.Enums;
@using static MSIS_HMS.Core.Enums.GenderEnum;
@model MSIS_HMS.Core.Entities.LabTest

<div class="col-xs-12 ">

    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title pull-left">Basic Info</h2>
                    <div class="actions panel_actions pull-right">
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <form action="/LabTests/@ViewData["Action"]" method="post">
                            @Html.AntiForgeryToken()
                            @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                            {
                                <input asp-for="Id" hidden />
                                <input asp-for="BranchId" hidden />
                            }
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-3 form-group">
                                        <label class="form-label" for="Name">Name</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <input type="text" class="form-control" id="field-1" asp-for="Name">
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-3 form-group">
                                        <label class="form-label" for="Code">Code</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <input type="text" class="form-control" id="field-7" asp-for="Code">
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-3 form-group">
                                        <label class="form-label" for="Category">Category</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <select class="form-control" asp-for="Category" asp-items="Html.GetEnumSelectList<MSIS_HMS.Core.Enums.LabCategoryEnum>()">
                                                <option selected="selected" value="">Please select Category</option>
                                            </select>
                                            <span asp-validation-for="Category" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-3 form-group">
                                        <label class="form-label" for="Profile">Profile</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <select class="form-control" asp-for="LabProfileId" asp-items="ViewBag.LabProfiles" >
                                                <option selected="selected" value="">Please select Profile</option>
                                            </select>
                                            
                                        </div>
                                    </div>
                                    <div class="col-xs-12 form-group">
                                        <label class="form-label" for="Description">Description</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <textarea asp-for="Description" class="form-control autogrow" cols="5" id="field-10" style="overflow: hidden; overflow-wrap: break-word; resize: horizontal; height: 54px;"></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-xs-4 form-group">
                                        <label class="form-label" for="UnitPrice">Unit Price</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <input type="text" class="form-control" asp-for="UnitPrice">
                                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 form-group">
                                        <label class="form-label" for="ReferralFee">Referral Fee</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <input type="text" class="form-control" asp-for="ReferralFee">
                                            <span asp-validation-for="UnitPrice" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 form-group">
                                        <label class="form-label" for="ReferralFeeType">Percentage/Fixed Amount</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <select class="form-control" asp-for="ReferralFeeType" asp-items="Html.GetEnumSelectList<MSIS_HMS.Core.Enums.EnumFeeType.FeeTypeEnum>()">
                                                <option selected="selected" value="">Please select Fee Type</option>
                                            </select>
                                            <span asp-validation-for="ReferralFeeType" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xs-4 form-group">
                                        <label class="form-label" for="CollectionGroup">CollectionGroup</label>
                                        <span class="desc">*</span>
                                        <div class="controls">
                                            <select class="form-control" asp-for="CollectionGroupId" asp-items="ViewBag.CollectionGroups">
                                                <option selected="selected" value="">Please select CollectionGroup</option>
                                            </select>

                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="root"></div>
                            </div>
                            <div class="col-xs-12  padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary gradient-blue">Save</button>
                                    <button type="button" data-href="/LabTests/Index" class="btn btn-click">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts
{
}