@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard col-lg-12">
    <section class="box nobox marginBottom0">
        <div class="content-body">
            <div class="row">

                <div class="col-lg-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left ico-icon icon-md icon-primary mt-10">
                            <img src="../data/icons/laborder.png" class="ico-icon-o" alt="">
                        </i>
                        <div class="stats">
                            <h3 class="mb-5">@ViewBag.LabOrder</h3>
                            <span>Total Lab Order </span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left ico-icon icon-md icon-primary mt-10">
                            <img src="../data/icons/money.png" class="ico-icon-o" alt="">
                        </i>
                        <div class="stats">
                            <h3 class="mb-5">@ViewBag.LabOrderAmt MMK</h3>
                            <span>Lab Order Amount For Today</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left ico-icon icon-md icon-primary mt-10">
                            <img src="../data/icons/money.png" class="ico-icon-o" alt="">
                        </i>
                        <div class="stats">
                            <h3 class="mb-5">@ViewBag.OrderAmt MMK</h3>
                            <span>Pharmacy Amount For Today</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 col-xs-12">
                    <div class="r4_counter db_box">
                        <i class="pull-left ico-icon icon-md icon-primary mt-10">
                            <img src="../data/icons/purchase.png" class="ico-icon-o" alt="">
                        </i>
                        <div class="stats">
                            <h3 class="mb-5">@ViewBag.PurchaseAmt MMK</h3>
                            <span>Purchase Amount For Today</span>
                        </div>
                    </div>
                </div>

            </div>
            <!-- End .row -->
        </div>
    </section>
</div>

<div class="clearfix"></div>
