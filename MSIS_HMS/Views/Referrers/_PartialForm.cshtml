@using MSIS_HMS.Enums;
@model MSIS_HMS.Core.Entities.Referrer

<div class="col-xs-12 ">

    <div class=" bg-w">
        <div class="col-lg-12 col-xs-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title pull-left">Basic Info</h2>
                    <div class="actions panel_actions pull-right">
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <form action="/Referrers/@ViewData["Action"]" method="post">
                            @Html.AntiForgeryToken()
                            @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                            {
                                <input asp-for="Id" hidden />
                                <input asp-for="BranchId" hidden />
                            }
                        <div class="col-xs-12 ">
                            <div class="form-group">
                                <label class="form-label" for="field-1">Name</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-1" asp-for="Name">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-7">Address</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-7" asp-for="Address">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-7">Clinic Name</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-7" asp-for="ClinicName">
                                    
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-4">Phone</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-4" asp-for="Phone">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="field-6">Township</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-4" asp-for="Township">
                                    <span asp-validation-for="Township" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="field-6">City</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="text" class="form-control" id="field-4" asp-for="City">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="FeeType">Fee Type</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <select class="form-control" asp-for="FeeType" asp-items="Html.GetEnumSelectList<MSIS_HMS.Core.Enums.EnumFeeType.FeeTypeEnum>()">
                                        <option selected="selected" value="">Please select Fee Type</option>
                                    </select>
                                    <span asp-validation-for="FeeType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="Fee">Fee</label>
                                <span class="desc"></span>
                                <div class="controls">
                                    <input type="number" class="form-control" id="field-4" asp-for="Fee">
                                    <span asp-validation-for="Fee" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                            <div class="col-xs-12  padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary gradient-blue">Save</button>
                                    <button data-href="/referrers/index" class="btn btn-click">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts
{
}