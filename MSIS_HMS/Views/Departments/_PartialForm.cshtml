@using MSIS_HMS.Enums;
@model MSIS_HMS.Core.Entities.Department

<div class="col-xs-12 ">

    <div class=" bg-w">
        <div class="col-lg-12 col-xs-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title pull-left">Basic Info</h2>
                    <div class="actions panel_actions pull-right">
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <form action="/Departments/@ViewData["Action"]" method="post">
                            @Html.AntiForgeryToken()
                            @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                                {
                                    <input asp-for="Id" hidden />
                                    <input asp-for="BranchId" hidden />
                                }
                            <div class="col-xs-12 ">
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Name</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-1" asp-for="Name">
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-5">Description</label>
                                    <div class="controls">
                                        <textarea class="form-control autogrow" cols="5" id="field-5" style="overflow: hidden; overflow-wrap: break-word; resize: horizontal; height: 54px;" asp-for="Description"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                @* <div class="form-group"> *@
                                @*     <label class="form-label" for="field-2">Branches</label> *@
                                @*     <div class="controls"> *@
                                @*         <select asp-for="BranchId" asp-items="ViewBag.Branches" class="form-control m-bot15" id="field-2"> *@
                                @*             <option value="">Please Select Parent Menu</option> *@
                                @*         </select> *@
                                @*         $1$ <span asp-validation-for="BranchId" class="text-danger"></span> #1# *@
                                @*     </div> *@
                                @* </div> *@
                                <div class="form-group">
                                    <label class="form-label" for="field-3">Type</label>
                                    <select asp-for="Type" asp-items="ViewBag.Types" class="form-control m-bot15" id="field-3">
                                            <option value="">Please Select Type</option>
                                    </select>
                                    @* <span asp-validation-for="Type" class="text-danger"></span> *@
                                </div>
                            </div>
                            <div class="col-xs-12  padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary gradient-blue">Save</button>
                                    <button type="button" data-href="/departments/index" class="btn btn-click">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>