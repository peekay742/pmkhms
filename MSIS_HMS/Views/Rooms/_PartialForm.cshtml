@using MSIS_HMS.Enums;
@model MSIS_HMS.Core.Entities.Room
@{
     var controller = "Rooms";
    ViewData["Title"] = "All "+controller;
}
<div class="col-xs-12 ">

    <div class=" bg-w">
        <div class="col-lg-12 col-xs-12">
            <section class="box">
                <header class="panel_header">
                    <h2 class="title pull-left">Basic Info</h2>
                    <div class="actions panel_actions pull-right">
                    </div>
                </header>
                <div class="content-body">
                    <div class="row">
                        <form action="/@controller/@ViewData["Action"]" method="post">
                            @Html.AntiForgeryToken()
                            @if (ViewData["Action"].ToString() == ViewEnum.Action.Edit.ToDescription())
                            {
                                <input asp-for="BranchId" hidden/>
                                <input asp-for="Id" hidden />
                               
                            }
                            <div class="col-xs-12 ">
                                <div class="form-group">
                                    <label class="form-label" for="field-8">Ward</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" asp-for="WardId" asp-items="ViewBag.Wards"  id="field-8">
                                            <option value="">Please Select Parent Menu</option>
                                        </select>
                                        <span asp-validation-for="WardId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-19">RoomNo</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-19" asp-for="RoomNo">
                                        <span asp-validation-for="RoomNo" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-9">RoomType</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <select class="form-control" asp-for="RoomTypeId" asp-items="ViewBag.RoomTypes" id="field-9">
                                            <option value="">Please Select Parent Menu</option>
                                        </select>
                                        <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-34">Status</label>
                                    <select asp-for="Status" asp-items="ViewBag.RoomStatus" class="form-control m-bot15" id="field-34">
                                            <option value="">Please Select Type</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label" for="field-1">Price</label>
                                    <span class="desc"></span>
                                    <div class="controls">
                                        <input type="text" class="form-control" id="field-1" asp-for="Price" min="0">
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="col-xs-12  padding-bottom-30">
                                <div class="text-left">
                                    <button type="submit" class="btn btn-primary gradient-blue">Save</button>
                                    <button type="button" data-href="/@controller/index" class="btn btn-click">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
@section Scripts
{
}